import cv2
img = cv2.imread(r"C:\\Users\\user\\Desktop\\WPy64-3830\\picture\\apple01.jpg") # ダブルクォーテーションの中身は各自で指定
import matplotlib.pyplot as plt
%matplotlib inline
img = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
imgGRAY = cv2.cvtColor(img, cv2.COLOR_RGB2GRAY)

Thval2,binary = cv2.threshold(imgGRAY, 0, 255, cv2.THRESH_BINARY + cv2.THRESH_OTSU)

plt.imshow(binary,cmap="gray")#imshowはカラー基準

